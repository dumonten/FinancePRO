<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">>


    <TextView
        android:id="@+id/textViewCategoryItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="TextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewCategoryItems"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_below="@+id/textViewCategoryItems"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/cat_items_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RecyclerViewCategoryItems"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="clip_horizontal"
        android:text="@string/cat_btn_add"
        android:textSize="25dp" />
</RelativeLayout>